<%= form_for(@location) do |f| %>
  <%= render 'error_messages', object: @location %>
    <%= f.label :building_number %>
    <%= f.text_field :building_number, class: 'form-control' %>

    <%= f.label :street %>
    <%= f.text_field :street, class: 'form-control' %>

    <%= f.label :apartment_number %>
    <%= f.text_field :apartment_number, class: 'form-control' %>

    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, class: 'form-control' %>

    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>

    <%= f.label :province %>
    <% options = options_from_collection_for_select(@province, 'province', 'province') %>
    <%= f.select :province, options, {prompt: "Select province"}, {:class => 'form-control'} %>

    <br>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
