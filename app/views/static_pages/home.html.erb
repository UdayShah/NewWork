<% provide(:title, "Home") %>

<%= render 'layouts/header' %>

<section class="bg-gray no-bottom-padding" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="section-heading dark wow fadeInUp">What is New Work?</h2>
                <p class="section-body light-gray text-faded wow fadeInUp">
                    New Work is a Job Search website that makes job searching fun! New Work takes elements from already
                    successful job search apps and combines them with the mechanics of modern day social networking to
                    make job searching easier than ever.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="features">
    <div class="container">
        <div class="section-heading">
            <h2>Phone App</h2>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-lg-6 feature wow fadeInUp">
                <div class="media">
                    <div class="media-left">
                        <span><%= image_tag('google-play.png', width: "95%") %></span>
                    </div>
                    <div class="media-body">
                        <h4>Google Play</h4>
                        <p>App coming soon on Android!</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-6 col-lg-6 feature wow fadeInUp">
                <div class="media">
                    <div class="media-left">
                        <span><%= image_tag('app-store.png', width: "97%") %></span>
                    </div>
                    <div class="media-body">
                        <h4>App Store</h4>
                        <p>App coming soon on iOS!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
