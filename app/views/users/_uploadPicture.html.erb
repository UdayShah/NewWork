<%= form_tag({action: :upload_picture}, multipart: true) do %>
  <label class="btn btn-primary btn-xl page-scroll wow fadeInUp upload-btn-label">
    Upload Picture
    <%= file_field_tag 'file', class: "upload-btn" %>
  </label>
  <br/>
  <%= submit_tag "Upload", class: "btn btn-primary btn-xl page-scroll wow fadeInUp upload-submit" %>
<% end %>
