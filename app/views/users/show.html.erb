<%
  title = "#{@user.first_name} #{@user.last_name}'s Profile"
  provide(:title, title)
%>

<div class="general__image-gradient">
  <div class="header-mask">
    <div class="header-content">
      <div class="header-content-inner">
        <div class="col-md-12">
          <%=
            if File.exist?(Rails.root.join('app', 'assets', 'images', 'users', "#{@user.id}_profile.jpg"))
              image_tag("users/#{@user.id}_profile.jpg", class: "profile_picture")
            else
              image_tag('users/noimage.jpg', class: "profile_picture")
            end
          %>
          <h1 id="homeHeading" class="wow fadeInUp">
            <%= @user.first_name %>
            <%= @user.last_name %>
          </h1>
          <hr>

          <%
            if File.exist?(Rails.root.join('public', 'uploads', 'resumes', "#{@user.id}_resume.pdf"))
          %>
          <div class="resume-status found">
            <a href="#about" class="btn btn-primary btn-xl page-scroll wow fadeInUp" data-wow-delay="0.6s">View Resume</a>
          </div>
          <%
            else
          %>
          <div class="resume-status not-found">
            <%= render 'uploadResume' %>
          </div>
          <%
            end
          %>

          <br/>
          <br/>

          <div class="profile-body">
            <%= render 'uploadPicture' %>
            
            <br/>

            <ul class="skills-list">
              <%= render @skillsets %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
