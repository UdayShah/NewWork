<%= form_for(@posting) do |f| %>
    <%= render 'error_messages', object: @posting %>

    <%= f.label :job_name %>
    <%= f.text_field :job_name, class: 'form-control' %>

    <%= f.label :job_description %>
    <%= f.text_area :job_description, class: 'form-control' %>

    <%= f.label :positions %>
    <%= f.text_field :positions, class: 'form-control' %>


	<%= f.hidden_field :employer_id, :value => @employer.id %>
	<%= f.hidden_field :location_id, :value => @user.location_id %>
    <br>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
